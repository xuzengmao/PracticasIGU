<Window x:Class="Practica3_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica3_3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Name="CrearFigura" Content="Crear Figura" Margin="40 5 40 5" Click="CrearFigura_Click"/>
        <Button Name="Animar" Content="Animar" Margin="40 5 40 5" Grid.Column="1" Click="Animar_Click"/>
        <Canvas Name="Lienzo" Grid.Row="1" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
