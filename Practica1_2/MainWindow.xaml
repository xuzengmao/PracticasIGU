<Window x:Class="Practica1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practica1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid Background="ForestGreen">
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <Button Name="botonCelsius" Content="Celsius" Margin="10" Background="Orange" Click="botonCelsius_Click"/>
                <Button Name="botonFahrenheit" Content="Fahrenheit" Margin="10" Background="Yellow" Click="botonFahrenheit_Click"/>
            </StackPanel>
            <StackPanel Width="300">
                <TextBox Name="CajaTexto" Margin="8"/>
                <Label Name="Etiqueta" Background="Azure" Margin="8"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
